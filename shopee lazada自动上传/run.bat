echo ================================
echo.

REM ================================
REM 调用 Python 运行脚本
REM 如需指定 Python 路径，可自行替换下面的 python
REM ================================
python -X utf8 "shopee_lazada_auto_upload.py"

echo.
echo ================================
echo 程序执行完毕，按任意键退出...
echo ================================
pause >nul
